<h1>Add A New Movie</h1>

<form action="http://localhost:3000/create_movie">
  <div>
    <label for="movie_title">Title:</label>
    <input id="movie_title" type="text" name="the_title">
  </div>
  <div>
    <label for="movie_image_url">Image URL:</label>
    <input id="movie_image_url" type="text" name="the_image">
  </div>
  <div>
    <label for="movie_year">Year Released:</label>
    <input id="movie_year" type="text" name="the_year">
  </div>
  <div>
    <label for="movie_description">Description:</label>
    <input id="movie_description" type="text" name="the_description">
  </div>
  <div>
    <label for="movie_duration">Run Time:</label>
    <input id="movie_duration" type="text" name="the_duration">
  </div>

  <div>
    <button>Create Movie</button>
  </div>
</form>
